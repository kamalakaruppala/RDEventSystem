
@{
    ViewBag.Title = "UsersRegistered";
}

<DOCTYPE html>
    <html>
    <body>

        <style>

            table,
            th,
            td {
                padding: 10px;
                border: 2px solid Black;
                border-collapse: collapse;
            }
        </style>
        <header>
            <center><h1 Style="background-color: black;color:pink;"> Registered Users</h1></center>
        </header>
        <br />
        <button onclick="location.href='@Url.Action("AdminEvents", "Events")';return false;" class="button">Back</button>
        <br />

        <center>
            <table>
                <tr>
                    <th> <h3 Style="background-color: white;color:darkgrey;"> EmailID</h3></th>
                    <th><h3 Style="background-color: white;color:darkgrey;">  Event Name</h3></th>

                    <th> <h3 Style="background-color: white;color:darkgrey;"> Profile Details</h3></th>
                    <th> <h3 Style="background-color: white;color:darkgrey;"> Assign Roles</h3></th>




                </tr>
                @foreach (var i in Model)
                {
            <tr>
                <td> @i.EmailID</td>
                <td> @i.EventName </td>

                <td>
                    @Html.ActionLink("User Profile", "UserDetails", new { email = @i.EmailID })
                </td>
                <td>
                    @Html.ActionLink("Assign Roles", "AssignRole", new { Email = @i.EmailID,eventname=@i.EventName })
                </td>
            </tr>
                }
            </table>
        </center>
    </body>
</html>
<style>
    .button {
        background-color: black;
        color: white;
        padding: 16px 20px;
        margin: 20px 0;
        border: none;
        cursor: pointer;
        width: 20%;
        opacity: 0.9;
    }
</style>
