@model RDEvent.Models.Register
@{


    ViewBag.Title = "NonSkating";
}

<script src="~/Models/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<html>
<body>
    <center>
        <h1 Style="background-color: black;color:pink;"> Enter your Work History & Details </h1>
    </center>
    <br />
    <h2>Non-Skating Officials Roles</h2>
    <br />
    @using (Html.BeginForm("NonSkating", "Profile", FormMethod.Post))
    {

        @Html.AntiForgeryToken()




        <p> @Html.Label("Experience in Years:")</p>
        @Html.TextBoxFor(db => db.ExperiencinYears, null, new { @class = "form-contal" })
        @Html.ValidationMessageFor(db => db.ExperiencinYears, "", new { @class = "text-danger" })
        <br />
        <div class="panel panel-body" style="min-height:256px"></div>

        <p> @Html.Label("NonRoles:")</p>
        <ul class="list-group">
            <li class="list-group-item-heading active"></li>

            @foreach (var NonRoles in ViewBag.RolesList)

            {
                <li class="list-group-item">
                    <div class="checkbox">
                        <input type="checkbox" id="check_@NonRoles.NonRolesID" checked="@NonRoles.IsAvailable" />
                        <label for="check_@NonRoles.NonRolesID">@NonRoles.NonRolesList</label>
                    </div>

                </li>
            }
        </ul>


        <br />
        <br />
        <p> @Html.Label("Justifying choosen roles")</p>
        @Html.TextBoxFor(db => db.Justifying, null, new { @class = "form-contal" })
        @Html.ValidationMessageFor(db => db.Justifying, "", new { @class = "text-danger" })
        <br />
        <p> @Html.Label("Certification Levels:")</p>
        @Html.DropDownList("CertificationLevels", new List<SelectListItem>
        {
    new SelectListItem {Text ="Level 0",Value="1"},
    new SelectListItem {Text ="Level 1",Value="2"},
    new SelectListItem {Text ="Level 2",Value="3"},
    new SelectListItem {Text ="Level 3",Value="4"},
        }, "Select the Level")

        @Html.ValidationMessageFor(db => db.CertificationLevels, "", new { @class = "text-danger" })
        <br />
        <br />

        <p> @Html.Label("Do you have any ministry of background:")</p>
        @Html.DropDownListFor(db => db.MinistryofBackground, new List<SelectListItem>
        {
    new SelectListItem {Text ="Yes",Value="1"},
    }, "No")
        @Html.ValidationMessageFor(db => db.MinistryofBackground, "", new { @class = "text-danger" })
        <br />
        <br />
        <p> @Html.Label("Additional skills:")</p>
        @Html.TextBoxFor(db => db.AdditionalSkills, null, new { @class = "form-contal" })
        @Html.ValidationMessageFor(db => db.AdditionalSkills, "", new { @class = "text-danger" })
        <br />
        <br />
        <center>
            <p> <a href="~/Profile/Availability"> <div class="button"><center>Next</center>  </div> </a></p>
        </center>


        <style>
            * {
                box-sizing: border-box;
            }

            /* Add padding to containers */
            .container {
                padding: 16px;
            }

            /* Full-width input fields */
            .form-contal, text-danger {
                width: 30%;
                padding: 15px;
                margin: 5px 0 22px 0;
                display: inline-block;
                border: none;
                background: #f1f1f1;
            }

            input[type=text]:focus, input[type=password]:focus {
                background-color: #ddd;
                outline: none;
            }

            /* Overwrite default styles of hr */
            hr {
                border: 1px solid #f1f1f1;
                margin-bottom: 25px;
            }

            /* Set a style for the submit/register button */
            .button {
                background-color: #000000;
                color: black;
                padding: 16px 20px;
                margin: 20px 0;
                border: none;
                cursor: pointer;
                width: 20%;
                opacity: 0.9;
            }

                .button:hover {
                    opacity: 1;
                }

            /* Add a blue text color to links */
            a {
                color: white;
            }

            /* Set a grey background color and center the text of the "sign in" section */
            .signin {
                background-color: #f1f1f1;
                text-align: center;
            }
        </style>
    }
</body>
</html>

